# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Server Configuration
NODE_ENV=production
PORT=4000

# Database
DB_PATH=./data/app.db

# JWT Secret (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=alerts@yourdomain.com

# CORS Origins (comma-separated for multiple domains)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
VITE_API_URL=https://api.yourdomain.com
VITE_APP_NAME=Stay Planner
VITE_APP_VERSION=1.0.0

# Flight Search Provider
PROVIDER_FLIGHTS=skyscanner
SKYSCANNER_API_KEY=your-production-skyscanner-api-key

# Accommodation Booking
BOOKING_AFFILIATE_ID=your-production-booking-affiliate-id
BOOKING_AID_PARAM=aid

# Airbnb Deep Links
AIRBNB_ENABLE_DEEPLINKS=true
